<!DOCTYPE html>
<html>
  <head>
    <title>Bookers</title>
    <%= csrf_meta_tags %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <meta name="viewport" content="width=device-width,initial-scale=1">
  </head>

  <body>
  <% if user_signed_in? %>
   <header class="navbar navbar-inverse">
     <nav class='nav navbar-nav navbar-left' >
        <span>Bookers</span>
          </nav>
            <ul class="nav navbar-nav navbar-right">
          <nav>
              <ul class="nav navbar-nav navbar-right">
                <li class="glyphicon glyphicon-home home"><%= link_to "Home", user_path(current_user.id) %></li>
                <li class="glyphicon glyphicon-link about"><%= link_to "Users", users_path %></li>
                <li class="glyphicon glyphicon-edit sign_up"><%= link_to "Books", books_path %></li>
                <li class="glyphicon glyphicon-log-in sign_in"><%= link_to "logout", destroy_user_session_path, method: :delete, notice: "Book was successfully created."%></li>
              </ul>
          </nav>
            <% else %>
    <header class="navbar navbar-inverse">
     <nav class='nav navbar-nav navbar-left' >
        <span>Bookers</span>
          </nav>
            <ul class="nav navbar-nav navbar-right">
                <li class="glyphicon glyphicon-home home"><%= link_to "Home", root_path %></li>
                <li class="glyphicon glyphicon-user users"><%= link_to "About", home_about_path %></li>
                <li class="glyphicon glyphicon-log-out logout"><%= link_to "sign up", new_user_registration_path %></li>
                <li class="glyphicon glyphicon-book books"><%= link_to "login", new_user_session_path %></li>
            </ul>
            </nav>
        <% end %>
      </header>
<%= yield %>
  </body>
</html>