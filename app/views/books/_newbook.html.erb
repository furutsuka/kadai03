
<h3>New book</h3>
          <%= form_for book do |f| %>
            <div class=“book-form”>
              <h4>Title</h4>
              <%= f.text_field :title %>
            </div>
            <div class=“book-form”>
              <h4>Opinion</h4>
              <%= f.text_area :body %>
            </div>
            <div class=“row”>
              <%= f.submit 'Create Book'%>
            </div>
          <% end %>
